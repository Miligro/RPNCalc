<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/calculator_header">

        <ListPreference
            app:defaultValue="#a8a8a8"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:key="color"
            app:title="@string/color_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="4"
            app:entries="@array/stack_size_values"
            app:entryValues="@array/stack_size_values"
            app:key="stackSize"
            app:title="@string/stack_size_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="3"
            app:entries="@array/precision_values"
            app:entryValues="@array/precision_values"
            app:key="precision"
            app:title="@string/precision_title"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            app:key="fontSize"
            app:title="Font size"
            app:showSeekBarValue="true"
            app:defaultValue= "60" />

    </PreferenceCategory>

</PreferenceScreen>